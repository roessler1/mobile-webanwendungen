{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/assets/css/signup_desktop.css" rel="stylesheet" media="only screen and (min-width: 600px)">
    <link href="/assets/css/signup_smartphone.css" rel="stylesheet" media="only screen and (max-width: 600px)">
{% endblock stylesheets %}

{% block body %}
    <div id="divTop">
        <a href="{{ path('home') }}">Home</a>
        <a href="{{ path('signin') }}">Sign in</a>
    </div>
    <div id="divBot">
        <div id="middleBox">
            <form method="post" id="signupBox" action="{{ path('createUser') }}">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
                <label for="password">Retype Password:</label>
                <input type="password" id="retypedPassword" name="retypedPassword" required>
                <input type="submit" value="Sign Up">
            </form>
        </div>
    </div>
{% endblock body %}