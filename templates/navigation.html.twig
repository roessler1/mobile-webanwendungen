{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/assets/css/logged_in_grid.css" rel="stylesheet">
    <link href="/assets/css/player.css" rel="stylesheet">
    <link href="/assets/css/player_desktop.css" rel="stylesheet" media="only screen and (min-width: 600px)">
    <link href="/assets/css/navigation.css" rel="stylesheet">
    <link href="/assets/css/navigation_smartphone.css" rel="stylesheet" media="only screen and (max-width: 600px)">
    <link href="/assets/css/navigation_desktop.css" rel="stylesheet" media="only screen and (min-width: 600px)">
{% endblock stylesheets %}

{% block javascripts %}
    <script type="text/javascript" src="/assets/js/jquery-3.7.0-min.js"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script type="text/javascript" src="/assets/js/routing.js"></script>
{% endblock javascripts %}

{% block body %}
    <nav>
        <ol>
            <li onclick="loadContent('homepage')">
                <svg preserveAspectRatio="xMinYMin meet">
                    <path d="M 2.9333 22 H 8.8 V 17.6 H 13.2 V 22 H 19.0666 V 13.2 H 22 L 11 3.6666 L 0 13.2 H 2.9333 Z"/>
                </svg>
                <div>
                    Homepage
                </div>
            </li>
            <li onclick="loadContent('search')">
                <svg preserveAspectRatio="xMinYMin meet">
                    <path d="M8, 7 A7, 7 0 1 0 22, 7 A7, 7 0 0 0 8,7 M9,10.7 L0,19.5 l2.5 2.5 L11.1,12.7"/>
                </svg>
                <div>
                    Search
                </div>
            </li>
            <li>
                <svg preserveAspectRatio="xMinYMin meet">
                    <path d="
                    M 0 0 V 22 H 4 V 0 Z
                    M 7 0 V 22 h 4 V 0 Z
                    M 14 0 V 22 h 4 V 4 Z"/>
                </svg>
                <div>
                    Library
                </div>
            </li>
            <li>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100" height="100">
                    <rect x="5" y="3" width="14" height="18" rx="2" ry="2" fill="#4285F4"/>
                    <path fill="#FFF" d="M9.41 13L12 15.59 14.59 13 16 14.41 13.41 17 13.41 17 12 18.59 10.59 17 11 16.41 13.41 14 12 11.41 9.41 13z"/>
                </svg>
                <a href="{{ path('signout') }}">
                    Signout
                </a>
            </li>
        </ol>
    </nav>
    <main>
        {% block main %}
        {% endblock main%}
    </main>

    {{ render_esi(path('player')) }}
{% endblock body %}
