{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/assets/css/signin_desktop.css" rel="stylesheet" media="only screen and (min-width: 600px)">
    <link href="/assets/css/signin_smartphone.css" rel="stylesheet" media="only screen and (max-width: 600px)">
{% endblock stylesheets %}

{% block body %}
    <div id="divTop">
        <a href="{{ path('home') }}">Home</a>
        <a href="{{ path('signup') }}">Sign up</a>
    </div>
    <div id="divBot">
        <div id="middleBox">
            <form id="signinBox" method="post" action="{{ path("login") }}">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
                <input type="submit" value="Sign In">
            </form>
        </div>
    </div>
{% endblock body %}